{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:import/recommended", "airbnb-typescript/base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "linebreak-style": "off",
    "quotes": ["error", "double"],
    "import/extensions": "off",
    "sort-imports": "off",
    "@typescript-eslint/quotes": ["error", "double"]
  }
}
